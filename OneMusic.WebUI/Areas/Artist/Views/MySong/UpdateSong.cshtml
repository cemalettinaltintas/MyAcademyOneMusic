@model SongViewModel
@{
    ViewData["Title"] = "UpdateSong";
    Layout = "~/Areas/Artist/Views/ArtistLayout/Index.cshtml";
}

<h3>Şarkı Güncelleme Sayfası</h3>
<form method="post" enctype="multipart/form-data" asp-action="UpdateSong" asp-controller="MySong">
    <input type="hidden" asp-for="SongId" />
    <label>Şarkı Adı</label>
    <input type="text" asp-for="SongName" class="form-control" />
    <br />

    <label>Albüm Adı</label>
    <select asp-for="AlbumId" asp-items="@ViewBag.albums" class="form-control">
        <option>Albüm Seçin</option>
    </select>
    <br />

    <label>Şarkıyı Seçin</label>
    <input type="file" asp-for="SongFile" class="form-control" />

    <button class="btn btn-outline-primary">Güncelle</button>
    <br />
</form>

