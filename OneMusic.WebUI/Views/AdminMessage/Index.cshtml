@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Tüm Mesajlar</h3>

@{
    int count = 0;
}
<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>E-posta</th>
        <th>Konu</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deleteMessage(@item.MessageId)">Sil</button>
                <a class="btn btn-outline-info" asp-action="ReadMessage" asp-route-id="@item.MessageId">Oku</a>

            </td>
        </tr>
    }

</table>
<script>

    function deleteMessage(id) {

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/AdminMessage/DeleteMessage/" + id;

            }
        });

    }


</script>